<Window x:Class="WPF_Layouts.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Layouts"
        mc:Ignorable="d"
        Title="StackPanel" Height="100px" Width="200px">
    
    <StackPanel Orientation="Horizontal">
        <StackPanel Width="100px">
            <TextBlock Text="Feld 1" />
            <TextBlock Text="Feld 2" />
            <TextBlock Text="Feld 3" />
        </StackPanel>
        <StackPanel Width="50px">
            <TextBox />
            <TextBox />
            <TextBox />
        </StackPanel>
    </StackPanel>

</Window>
