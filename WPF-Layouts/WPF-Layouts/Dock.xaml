<Window x:Class="WPF_Layouts.Dock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Layouts"
        mc:Ignorable="d"
        Title="Dock" Height="300" Width="400">
    <DockPanel>
        <Button DockPanel.Dock="Top">Top 1</Button>
        <Button DockPanel.Dock="Bottom">Bottom 1</Button>
        <Button DockPanel.Dock="Bottom">Bottom 2</Button>
        <Button DockPanel.Dock="Left">Left</Button>
        <Button DockPanel.Dock="Right">Right 1</Button>
        <Button DockPanel.Dock="Top">Top 2</Button>
        <Button DockPanel.Dock="Right">Right 2</Button>
        <Button>Center</Button>
    </DockPanel>

</Window>
